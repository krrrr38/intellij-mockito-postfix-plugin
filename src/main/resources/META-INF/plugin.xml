<idea-plugin version="2">
  <id>com.krrrr38.idea.mockito.postfix</id>
  <name>Mockito Postfix Completion</name>
  <version>0.0.7</version>
  <vendor email="k.kaizu38@gmail.com" url="http://www.krrrr38.com">krrrr38</vendor>

  <description><![CDATA[
          This plugin adds postfix completion template for <a href="http://mockito.org/">Mockito</a>.
    ]]></description>

  <change-notes><![CDATA[
      <ul>
        <li>0.0.1 initial release</li>
        <li>0.0.2 fix idea-version settings for Intellij IDEA 14</li>
        <li>0.0.3 fix idea-version settings for Intellij IDEA 15</li>
        <li>0.0.5 for Intellij IDEA 2016</li>
        <li>0.0.6 for Intellij IDEA 2016.3+</li>
        <li>0.0.7 for Intellij IDEA 2019.3+</li>
      </ul>
    ]]>
  </change-notes>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="193.7288.26"/>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <codeInsight.template.postfixTemplateProvider language="JAVA"
                                                  implementationClass="com.krrrr38.idea.mockito.postfix.MockitoPostfixTemplateProvider" />
  </extensions>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.java</depends>

</idea-plugin>
